            android:name=".view.activity.MainActivity"
            android:label="@string/shit_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.ShotActivty"
            android:label="@string/title_activity_shot_activty"
